<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.mediatec.fragment.MediatecFragment">

    <Toolbar
        android:layout_width="match_parent"
        style="@style/toolbarTitle"
        android:layout_height="@dimen/default_toolbar_height"
        android:title="@string/btntxt_mediatec" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMediatec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        app:tabIndicator="@drawable/tab_indicator"
        app:tabIndicatorColor="?colorTertiary"
        app:tabIndicatorFullWidth="true"
        app:tabMode="fixed"
        app:tabRippleColor="@color/blue_pm"
        app:tabTextAppearance="@style/CustomTextAppearance"
        app:tabTextColor="?colorTertiary" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMediatec"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>