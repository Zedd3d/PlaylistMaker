<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingHorizontal="4dp"
    android:paddingVertical="6.5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgCover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundedCornersImageViewSmall"
        app:srcCompat="@drawable/placeholder_track_artwork" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="6dp">

        <TextView
            android:id="@+id/playlistName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="?colorTertiary"
            android:textSize="@dimen/searchlist_large_text"
            tools:text="Think a Little Less" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countTracks"
                style="@style/List_SmallTextStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="@dimen/searchlist_small_text"
                app:tint="@color/gray_pm"
                tools:text="158 треков" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

