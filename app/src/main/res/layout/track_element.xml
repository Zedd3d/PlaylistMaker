<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgArtworkInSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_marginEnd="@dimen/icon_padding"
        android:layout_marginBottom="@dimen/icon_padding"

        app:srcCompat="@drawable/placeholder_track_artwork" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/trackNameInSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/searchlist_large_text"
            android:textColor="?colorTertiary"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Yesterday (Remastered 2009)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistNameInSearch"
                style="@style/SearchList_SmallTextStyle"
                tools:text="The Beatles"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:tint = "@color/gray_pm"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_point" />

            <TextView
                android:id="@+id/trackTimeInSearch"
                style="@style/SearchList_SmallTextStyle"
                tools:text="0:23" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgBtnGo"
        style="@style/SettingsImgButtonStyle"
        android:layout_weight = "0"
        android:layout_marginTop="@dimen/default_padding_Top"
        android:layout_marginBottom="@dimen/default_padding_Bottom"
        android:layout_marginStart="@dimen/icon_padding"
        android:layout_marginEnd="@dimen/default_padding_end"

        app:srcCompat="@drawable/ic_arrow_forward" />

</LinearLayout>

