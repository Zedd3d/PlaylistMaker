<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_corners</item>
        <item name="android:layout_marginTop">@dimen/bigbtn_default_padding</item>
        <item name="android:layout_weight">1</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_pm</item>
        <item name="android:textSize">@dimen/bigbtn_text_size</item>
        <item name="backgroundTint">@color/white_pm</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black_pm</item>
        <!--<item name="android:stateListAnimator">@null</item> //так можно убрать тени при наследовании от другого родителя-->
    </style>

    <style name="SettingsTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">10</item>
        <item name="android:textSize">@dimen/settings_item_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsImgButtonStyle" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_weight">1</item>
        <item name="tint">@color/grayDay_whiteNight</item>
    </style>

    <style name="SettingsListStyleLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_19dp</item>
        <item name="android:paddingBottom">@dimen/padding_18dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="backButtonTitle" parent="Widget.MaterialComponents.TimePicker.ImageButton">

        <item name="android:layout_weight">7</item>
        <item name="android:contentDescription">@string/btntxt_back</item>
        <item name="android:background">?colorPrimary</item>
        <item name="srcCompat">@drawable/ic_arrow_back</item>
        <item name="tint">?colorTertiary</item>
    </style>

    <style name="TitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/bigbtn_text_size</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="MainContentListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EditTextMainStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/background_smallcorners</item>

        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">5dp</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@color/black_pm</item>

        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="EditTextMainStyleDayNight" parent="@style/EditTextMainStyle">
        <item name="android:drawableTint">@color/gray_pm</item>
        <item name="android:textColorHint">@color/gray_pm</item>
        <item name="android:backgroundTint">@color/lightgray_pm</item>
        <item name="tint">@color/gray_pm</item>
    </style>

    <style name="SearchList_SmallTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/searchlist_small_text</item>
        <item name="android:textColor">@color/grayDay_whiteNight</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackListButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/btn_corners</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="backgroundTint">?colorTertiary</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="PlayerCoverTrackValues">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grayDay_whiteNight</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:text">""</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="PlayerCoverTrackTitlesValues">
        <item name="android:textColor">@color/gray_pm</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="roundButtonsPlayList">
        <item name="android:background">?colorPrimary</item>
    </style>


</resources>